<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <%= form_tag books_path, method: "GET" do %>
        <div class="row">
          <div class="col-6 col-lg-8">
            <%= text_field_tag :title, "", class: "form-control" %>
          </div>
          <div class="col-6 col-lg-4">
            <%= submit_tag "Search", class: "btn btn-primary btn-lg flex-item" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<br>

<!--Content-->
<div class="container">
  <div class="row">
    <!-- columnns -->
    <% @books.each do |b| %>
      <div class="col-lg-3 col-md-6">
        <!--Card-->
        <div class="card card-book">

          <!--Card image-->
          <div class="view overlay hm-white-slight">
            <% if b.picture.nil? %>
              <%= image_tag asset_path("book.png"), class: "img-fluid", alt: "" %>
            <% else %>
              <%= image_tag b.picture, class: "img-fluid", alt: "" %>
            <% end %>
              <div class="mask"></div>
          </div>
          <!--/.Card image-->

          <!--Card content-->
          <div class="book-info">
            <!--Title-->
            <h5 class="card-title light-blue-text"><strong><%= b.title %></strong></h5>
            <br>
            <!--Text-->
            <p class="card-text white-text">Writer : <%= b.writer %></p>
            <p class="card-text white-text">Publihser : <%= b.publisher %></p>
            <p class="card-text white-text">Year : <%= b.published_at.strftime("%Y-%m-%d") %></p>
            <%= link_to "STUDY", book_path(b, page: b.posts.order(:page).pluck(:page).uniq[0] ), class: "btn btn-default" %>
          </div>
          <!--/.Card content-->

        </div>
        <!--/.Card-->

      </div>
      <!-- columnns -->
    <% end %>
  </div>
</div>

<!--/.Content-->
