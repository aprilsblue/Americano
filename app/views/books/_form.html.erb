<%= form_for book, class: "form-group" do |f| %>
  <%= f.text_area :title, class: "form-control", placeholder: "title" %>
  <%= f.text_area :writer, class: "form-control", placeholder: "writer" %>
  <%= f.text_area :publisher, class: "form-control", placeholder: "publisher" %>
  <%= f.date_field :published_at, class: "form-control" %>
  <%= f.text_area :picture, class: "form-control", placeholder: "Book img url" %>
  <%= f.submit "SUBMIT", class: "btn btn-default" %>
<% end %>
