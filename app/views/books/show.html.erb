<main>

<!--Main layout-->
<div class="container">
  <div class="row">

    <!--Sidebar-->
    <div class="col-lg-3">

      <div class="widget-wrapper">
        <h4>Index</h4>
        <br>
        <div class="list-group">
          <% @book.chapters.each_with_index do |chapter, index| %>
            <%= link_to "#{chapter.ch_no} #{chapter.title}", class: "list-group-item" %>
          <% end %>
        </div>
      </div>

    </div>
    <!--/.Sidebar-->
    <!--Main column quotes & opinion-->
    <div class="col-lg-8">
      <%= render partial: 'quotes/show', locals: { quotes: @book.chapters.first.quotes } %>
    </div>
    <!--/.Main column-->

  </div>
</div>
<!--/.Main layout-->

</main>
