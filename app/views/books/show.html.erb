<div id="book_show">
  <div id="show_banner">
    <div class="wrapper_skinny">
      <h1><%= @book.title %> </h1>
      <p class="description"> <%= @book.writer %> | <%= @book.publisher %> | <%= @book.published_at.strftime("%Y-%m-%d") %> </p>
    </div>
  </div>
  <div id="breadcrumb">
    <%= link_to "+ New Post", new_book_post_path(@book, page: params[:page]) %>
  </div>

<main>
<!--Main layout-->
<div class="container main">
  <div class="row">
    <div class="col-2 col-lg-1 offset-lg-1 text-center">
      <!-- Page Slide -->
      <% @pages.each do |p| %>
        <% if params[:page].to_i == p %>
          <%= link_to book_path(@book, page: p), class: "lime-text" do %>
            <h4><b><%= p %></b></h4>
          <% end %>
          <br>
        <% else %>
          <%= link_to p, book_path(@book, page: p), class: "grey-text" %><br><br>
        <% end %>
      <% end %>
    </div>
    <div class="col-10 col-lg-9">
      <div class="row">
        <!--Main column quotes & opinion-->
        <div class="col-12">
          <%= render partial: 'posts/index', locals: { posts: @posts, book: @book } %>
        </div>
        <!--/.Main column-->
      </div>
    </div>
  </div>
</div>
<!--/.Main layout-->

</div>
</main>
