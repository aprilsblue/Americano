<% if posts.empty? %>
  <br>
  <h5 class="text-center light-blue-text">결과가 없습니다.</h5>
<% else %>
  <% posts.each do |p| %>
    <div class="card">
      <div class="card-block">
        <%#= render_with_hashtags(p.content, book.id) %>
        <%= p.content.html_safe %>
        <hr>
        <span class="grey-text"><i class="fa fa-user-circle"></i></span>
        &nbsp;
        <%= link_to post_replies_path(p.id), remote: true do %>
          <span class="gery-text"><i class="fa fa-comments-o"></i> <%= p.replies.count %></span>
        <% end %>
        &nbsp;
        <%= link_to new_post_reply_path(p.id), class: "grey-text", remote: true do %>
          <i class="fa fa-plus-square" aria-hidden="true"></i>
        <% end %>
        <% if p.user_id == current_user.id %>
          <%= link_to post_path(p), method: "DELETE", class: "delete-post grey-text", data: { confirm: "정말 삭제하겠습니까?" } do %>
            <i class="fa fa-trash" aria-hidden="true"></i>
          <% end %>
          <%= link_to edit_post_path(p), class: "edit-post grey-text" do %>
             <i class="fa fa-edit" aria-hidden="true"></i>
          <% end %>
        <% end %>
      </div>
    </div>
    <!-- reply/new -->
    <div id="post_<%= p.id %>_new">
    </div>
    <div id="post_<%= p.id %>">
    </div>
  <% end %>
<% end %>
