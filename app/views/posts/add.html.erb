<main>
  <div class="container main">
    <div class="row">
      <div class="col-lg-10 offset-lg-1">
        <%= form_for @post, url: append_post_path(book: @book, parent: @post.id), method: "POST", class: "new_post" do |f| %>
          <div class="page-box">
            <%= f.number_field :page, class: "form-control new-post-page", required: true, min: 1 %> <span>Page</span>
          </div>
          <br>
          <%= f.text_area :content, id: 'editor1', class: "form-control" %>
          <div class="btn-box text-center">
            <%= f.submit "SUBMIT", class: "btn-americano" %>
            <%= link_to "BACK", book_path(@book, page: @page), class: "btn-americano" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>
<script>
  // Turn off automatic editor creation first.
  // This one line makes  inline mode to change font and style with dropdown menu
  // and should be outside $(document).ready block
  CKEDITOR.disableAutoInline = true;
  $(document).ready(function(){
  var editor = CKEDITOR.inline( 'editor1' /*,{removePlugins: 'stylescombo'}*/);
  editor.config.startupFocus = true;
  });
</script>
