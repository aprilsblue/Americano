<div class="container">
  <div class="row marginTop30">
    <div class="col-md-4 offset-md-2">
      <%= image_tag asset_path("coffee.png"), class: "profile-img" %>
      <p>이메일 : <%= current_user.email %></p>
      <p>가입일 : <%= current_user.created_at.strftime("%y-%m-%d") %></p>
    </div>
    <div class="col-md-6">
      <h3 class="title">Your Friends</h3>
      <%= form_tag friend_path, class: 'form-group', method: 'POST', remote: true do %>
        <%= text_field_tag :email, "", class: 'form-control user-search', placeholder: "Friend's email" %>
        <%= submit_tag :submit, class: 'btn btn-default btn-submit', disabled: true %>
      <% end %>
      <ul class="friends_list">
        <%= render partial: 'list', locals: { followers: @followers, followees: @followees } %>
      </ul>
    </div>
  </div>
</div>
