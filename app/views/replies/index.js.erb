var post_var = $("#post_" + <%= @post_id %>);

if(post_var.attr("class") == "active-reply") {
  post_var.html("");
  post_var.removeClass("active-reply");
} else {
  post_var.html(
    "<%= escape_javascript(render partial: 'index', locals: { replies: @replies }) %>"
  );
  post_var.addClass("active-reply");
}
