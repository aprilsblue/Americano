<div class="row">
  <% yeahaps.each do |y| %>
    <div class="page-block tooltip">
      <%= link_to y.page.url, class: "list-group-item list-group-item-action flex-column align-items-start" do %>
        <%= image_tag "https://www.google.com/s2/favicons?domain=#{y.page.url}", onerror: "this.src='#{asset_path("favicon.ico")}'"%>
        <div><%= y.content %></div>
        <small class="text-muted">
          <%= y.page.url %>
        </small>
      <% end %>
      <span class="tooltiptext">
        <center>
          <span class="cursor:pointer" data-toggle="modal" id="<%y.id%>" data-target="editModal">
            <i class="fa fa-edit" aria-hidden="true"></i>
          </span>
          <%= link_to yeahap_path(y.id), method: "delete", remote: true, data: {confirm: "Are You Sure?"} do %>
            <i class="fa fa-remove" aria-hidden="true"></i>
          <% end %>
        </center>
      </span>
    </div>
  <% end %>
</div>

